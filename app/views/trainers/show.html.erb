<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<%= button_to "Create a pokemon", new_pokemon_path, :class => "button medium", :method => :get if current_trainer.id == @trainer.id %>

<table>
  <tr class = 'header'>
    <td>Pokemon</td>
    <td>Level</td>
    <td>Health</td>
  </tr>
  <% @trainer.pokemons.each do |p| %>
    <tr>
      <td><%= "#{p.name}" %></td>
      <td><%= "#{p.level}" %></td>
      <td><%= "#{p.health}" %></td>
      <td><%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %></td>
    </tr>
  <% end %>
</table>